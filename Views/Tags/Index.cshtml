@model IEnumerable<InventoryManagement.Models.Tag>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-warning" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TagName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TagName)
            </td>
            <td>
                <a class="btn btn-default" asp-action="Edit" asp-route-id="@item.TagId">Edit</a> 
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.TagId">Details</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TagId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
